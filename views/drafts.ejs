<!-- include header -->
<%- include('partials/header', {title: 'Joshua\' s Blog App' , page: 'in' }) %>

  <body>
    <div class="container">
      <h2><a href="/app/in" style="margin-right: 1rem;"><img class="icon" src="/images/left.png" /></a> Your Drafts</h2>
      <div>
        <% if (posts) { %>
          <ul class="post__list">
            <% posts.forEach((post)=> { %>
              <%- include('partials/post', {post: post}) %>
            <% }) %>
          </ul>
        <% } %>
        <% if (!posts || !posts.length) { %>
          <p>There are no posts yet.</p>
        <% } %>
      </div>
    </div>
  </body>

  <!-- include footer -->
  <%- include('partials/footer') %>